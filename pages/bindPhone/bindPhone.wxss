.body-bg {
  background-color: #FFFFFF;
  width: 100%;
  height: 100vh;
}

.user-ave {
  text-align: center;
  padding: 20px 0;
}

.user-ave image {
  width: 30%;
}

.input-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  padding: 8px 10px;
  height: 35px;
  line-height: 35px;
  border-top: 1rpx solid #ddd;
  border-bottom: 1rpx solid #ddd;
}

.input-item .title {
  /* width: 20%; */
  text-align: left;
}

.input-item .input-area {
  width: 45%;
  /* padding-left: 10px; */
}

.input-item .get-sms-code {
  /* width:34%;
  color:#fff;
