}

.input-item .get-sms-code text {
  border: 1rpx solid #ddd;
  padding: 5px 10px;
  font-size: 0.8em;
}

.input-item .get-sms-code .disabled-sms-code {
  background-color: #f3f3f3;
  color: #cecece;
}

.input-sms-code {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 8px 10px;
  height: 35px;
  line-height: 35px;
  border-bottom: 1rpx solid #ddd;
}

.input-sms-code .title {
  width: 20%;
  text-align: left;
}

.input-sms-code .input-sms-code {
  width: 80%;
  padding-left: 10px;
}
