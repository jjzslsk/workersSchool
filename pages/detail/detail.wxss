@import "../../utils/flex.wxss";
.body{width: 100%;height: 100vh;background: #F5F5F5;}
.head {height: auto;}
.head .top {height: 12rem;background: rosybrown;}
.head .top image {width: 100%;height: 12rem;}
.head .main {height: auto;padding: 8px;}
.head .main .main-text {color: #004;}
.head .main .create-date {color: dimgray;font-size: 12px;}
.head .bottm {display: flex;align-items: center;padding: 8px;}
.head .bottm image {height: 1.2rem;width: 1.2rem;border-radius: 50%;}
.head .bottm .bot-info {margin-left:6px;font-size: 14px;font-weight: inherit;}

.content {height: auto;margin: 8px;padding:8px;background: lightgrey;border-radius: 8px;}
.view-count{text-align: right;font-size: 0.7em;padding: 5px;color: #999999;box-sizing: border-box;}



/* ------copy---------- */
.scroll-area {height: calc(100% - 46px);}
.bg-white{background: #FFFFFF;}

.margin-t-10{margin-top: 10px;}
.margin-b-10{margin-bottom: 10px;}
.padded-10{padding: 10px;box-sizing:border-box;}
.padded-t-10{padding-top: 10px;box-sizing: border-box;}
.padded-l-5{padding-left: 5px;box-sizing: border-box;}
.padded-l-10{padding-left: 10px;box-sizing: border-box;}
.padded-b-0{padding-bottom: 0;}
.log-title{font-size: 0.8em;padding: 5px;}
.log-date{font-size: 0.7em;padding: 5px;color: #999999;}
.like-icon{width:20px;height: 20px;margin-left:calc(50% - 10px)}
.like-text{font-size: 0.6em;text-align: center;}
.log-img-item{padding: 5px;box-sizing: border-box;}
.log-img{width:100%;height: 80px;}

.log-content{font-size: 0.8em;padding: 5px;box-sizing: border-box;}
.view-count{text-align: right;font-size: 0.7em;padding: 5px;color: #999999;box-sizing: border-box;}

.cmt-title{font-size: 0.8em;padding: 5px;box-sizing: border-box;font-weight: bold;}
.cmt-item{border-bottom: 1px #DDDDDD solid;padding: 10px 0;box-sizing: border-box;}
.cmt-avatar{width: 30px;height: 30px;border-radius: 50%;border:1px #DDDDDD solid;}
.cmt-username{font-size: 0.7em;}
.cmt-content{font-size: 0.8em;padding: 5px 0;box-sizing: border-box;color: #666666;}
.cmt-like-count{text-align: right;font-size: 0.7em;color: #999999;}
.cmt-like-icon{width:16px;height: 16px;}

.footer{height: 46px;border-top: 1px #DDDDDD solid;background: #FFFFFF;}
.cmt-input{background: #F1F1F1;border-radius: 20px;height: 30px;font-size: 0.8em;margin-left: 10px;padding: 0 10px;box-sizing: border-box;}
.footer-icon{width:20px;height: 20px;margin-left:calc(50% - 10px);}

.cmtinput-mask{position: absolute;width: 100%;height: 100%;background: rgba(0,0,0,0.4);top: 0;left: 0;}
.cmtinput-bar{position: fixed;width: 100%;overflow: hidden;bottom: 0;padding: 10px;background: #FFFFFF;z-index: 999;font-size: 0.8em;padding-bottom: 50px;box-sizing: border-box;}
.send-cmt{position: absolute;right: 15px;background: #41CC8E;width: 60px;height: 30px;line-height: 30px;border-radius: 5px;text-align: center;color: #FFFFFF;bottom:10px;}

button::after{border: none;background: transparent;}
.no-cmt{text-align: center;padding: 10px;font-size: 0.7em;color: #999999;}
.footer-count{font-size: 0.7em;color: #999999;margin-left: 5px;}
.cmt-time{font-size: 0.7em;color: #999999;text-align: right;}
