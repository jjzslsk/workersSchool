/* pages/me/me.wxss */
@import "../../lib/aui.wxss";

.body{width: 100%;height: 100vh;background: #F5F5F5;}
.mall-img{width:60%;margin-left: 20%;margin-top: 20px;border:1px #DDDDDD solid}
.btn{width:50%;margin-left: 25%;height:40px;line-height: 40px;color: #999999;font-size: 0.8em;text-align: center;margin-top: 30px;border-radius: 5px;}
.user-info{height: 120px;padding:0 30px;background: #41CC8E;color: #FFFFFF;box-sizing:border-box;}
.avatar{height: 60px;width: 60px;border-radius: 50%;margin: 0 auto;}
.user-name{text-align: left;font-size: 16px;}
.user-balance{text-align: left;font-size:15px;margin-top: 5px;}
.items{width:calc(100% - 40px);background: #FFFFFF;border-radius: 10px;overflow: hidden;padding: 0;margin: -20px 5px 10px 20px;}
.item-title{padding: 15px;font-size: 0.9em;border-bottom: 1px #DDDDDD solid;}
.bg-body{background: #DDDDDD !important;border-right: 1px #FFFFFF solid;border-top: 1px #FFFFFF solid;}
.message{background: #FFFFFF;color: #259B24;border-radius: 5px;height: 25px;line-height: 25px;width: 60px;text-align: center;font-size: 0.7em;margin:0 auto;}
.msg-dot{background: red;width:15px; height:15px;line-height: 15px; border-radius:50%;position: absolute;right: 10px;margin-top: -33px;color: #FFFFFF;font-size: 0.7em;text-align: center;}
.scroll-area {height: 100%}
.order-item{border-radius: 5px;border:1px #259B24 solid;color: #259B24;padding: 3px 0;font-size: 0.8em;height: 1rem;line-height: 1rem;}
.title-tips{position: absolute;right: 30px;color: #259B24;font-size: 0.8em;margin-top: 5px;}
.status-list{padding: 5px 10px;box-sizing:border-box}
.status-count{position: absolute;width: 20px;height: 20px;line-height: 20px;text-align: center;background: red;color: #FFFFFF;font-size: 0.6em;border-radius: 50%;right:0;margin-top: -5px;}
.order-count{color: #666666;}
.kfBtn{position: absolute; width:90%;height:100%;background:transparent !important;border:none !important;}

