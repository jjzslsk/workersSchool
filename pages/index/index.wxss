.designer-itemrs .designer-itemr-title {font-size: .8rem;color: #000000;font-weight: bold;}
.designer-itemrs .designer-itemr-right {max-width: 50%;position: relative;font-size: 0.7rem;color: #757575;margin-left: 0.25rem;}
.item-name {font-size: 0.7rem;color: #757575;padding-left: 4px;}


  