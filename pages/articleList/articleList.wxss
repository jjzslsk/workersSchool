.class-scroll {white-space:nowrap;}
.tab-wrap {overflow: auto;height: 1.5rem;display: flex;align-items: center;padding: .5rem .5rem;}
.tab-item {display: flex;color: #757575;justify-content: center;align-items: center;margin: 0 .5rem;}
.tab-item-text {min-width: 4rem;font-size: 12px;padding:3px 4px;display:inline-block;display: flex;justify-content: center;align-items: center;}
.tab-item-text-color {background: #ddd;border-radius:15px;color: #000;}

.recommend-list{padding: 5px 10px 0 10px;background-color:#f5f5f5;}
.recommend-list .recommend-item{padding:0 0 8px 0;border-bottom: 1px solid #DDDDDD;margin-bottom: 12px;background: #fff;}
.recommend-list .recommend-item .recommend-item-img{width: 100%;}
.recommend-list .recommend-item .recommend-item-img image{width: 100%;height: 170px;}
.recommend-list .recommend-item .recommend-item-info{font-size: .8rem;color: #000000;font-weight: bold;padding: 12px 8px;}

.recommend-list .recommend-item .ws-card-footer{width: 100%;height: 2rem;line-height: 2rem;padding: 0 8px;}
.recommend-list .recommend-item .ws-card-footer .company{width: 60%;}
.recommend-list .recommend-item .ws-card-footer .company image{width: 2rem;height: 2rem;border-radius: 50%;}
.recommend-list .recommend-item .ws-card-footer .company span{margin-left: 5px;}
.recommend-list .recommend-item .ws-card-footer .ws-ft-btns{width: 40%;color: #999999;}
.recommend-list .recommend-item .ws-card-footer .ws-ft-btns .item-btn{width: calc(50% - 8px);text-align: right;max-width: 50%;position: relative;font-size: 0.7rem;color: #757575;}
.recommend-list .no-data{padding: 15px;display: flex;align-items: center;justify-content: center;}
.recommend-list .no-data-img{width:20rem;height: 20rem;}

.unfold{background: #fff;width: 100%;position: fixed;top: 0;left: 0;font-size: .5rem;height: 2rem;padding: .2rem;display: flex;align-items: center;justify-content: center;border-bottom: 1px #eeeeee solid;}
.unfold .unfold-img{height: .8rem;width: .8rem;}

.item-name {font-size: 0.7rem;color: #757575;padding-left: 4px;}


