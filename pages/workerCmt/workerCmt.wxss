/* pages/workerCmt/workerCmt.wxss */
@import "../../utils/flex.wxss";
.body{width: 100%;height: 100vh;background-color: #F1F1F1;position: relative;}
.scroll-area {height: calc(100% - 46px);padding: 10px;box-sizing:border-box;}

.list-item{padding: 15px 10px 15px 0;background: #FFFFFF;overflow: hidden;border-bottom: 1px #DDDDDD solid;}
.list-user{width: 100%;overflow: hidden;}
.list-user-avatar{width:20px;height:20px;float: left;margin: 0 10px}
.list-user-text{float: left;}
.border-r{border-right: 1px #DDDDDD solid;}
.username{font-size: 0.8em;}
.post-time{font-size: 0.7em;color: #999999;}
.list-content{color: #666666;font-size: 0.8em;padding-left:15px;margin-top:5px; }
.list-no-content{color: #999999;font-size: 0.8em;padding-left:15px;margin-top:5px; }
.commentlist-score{position: absolute;right: 15px;margin-top: -25px}
.commentlist-score image{float: left;width:13px;height: 13px}